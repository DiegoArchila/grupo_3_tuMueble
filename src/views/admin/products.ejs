-->
<!DOCTYPE html>
<html lang="<%- settingGeneral.languaje.Spanish %>">
    <!--HEAD-->
    <%- include("../partials/head.ejs") %>
    <body>

        <!--HEADER-->
        <%- include('../partials/header.ejs')%>

        <!--MiniBanner-->
        <!--Config-->
            <% minibar = {
                title:"Admin - Productos",
                icon:"eos-icons:admin-outlined"
            } %> 
        <%- include('../partials/miniBanner.ejs')%>

        <!--MAIN-->
        <main>
            
            <!--ADMINBAR-->
            <%- include('../components/adminBar.ejs')%>    
            
            <section class="product">
                <nav class="product__bar flx-ctr">
                    <h1 class="product__title">Productos</h1>
                    <button class="product__buttonCreate">
                        <a href="/admin/products/create" class="product__buttonCreateLink">
                            Nuevo
                            <i class="iconify product__buttonIcon" data-icon="carbon:add"></i>
                        </a>
                    </button>
                </nav>
                
                <!-- Products, alls the products  -->
                <% if (Object.keys(products).length!=0) {%>
                    <% products.forEach(product => {%>
                        <article class="flx-ctr product__item">
                            <a href="/products/<%= product.id %>" class="product__itemName"><%= product.name %></a>
                            <div class="flx-clm-ctr">
                                <span class="product__discount">-<%= product.discount %>% OFF</span>
                                <span class="product__totalPrice"><%= toCOP.format(product.priceFinal) %></span>
                            </div>
                            <button class="product__buttonDelete cartDetail__button flx-clm-ctr"">
                                <i class="iconify" data-icon="ph:trash-simple"></i>
                            </button>
                            <button class="product__buttonEdit cartDetail__buttonUnitsAdd">
                                <a href="/admin/products/<%= product.id %>">
                                    <i class="iconify" data-icon="ant-design:edit-outlined"></i>
                                </a>
                            </button>                           
                        </article>
                    <%}) %>
                            
                <% } else {%>
                    <!--Products is empty->
                <% } %>        
            </section>
        </main>
        
    
        <!--FOOTER-->
        <%- include('../partials/footer.ejs') %> 
        
    </body>
</html>